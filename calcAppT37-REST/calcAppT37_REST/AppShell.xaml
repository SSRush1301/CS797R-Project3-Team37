<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="calcAppT37_REST.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:calcAppT37_REST"
    >
    <ShellContent
        Title="CalculatorPage"
        ContentTemplate="{DataTemplate local:BasicCalc}"
        Route="BasicCalc" />
    <ShellContent Title="AddedFuncCalc"
                  ContentTemplate="{DataTemplate local:AddedFuncCalc}" />    
    <ShellContent Title="AboutPage"
                  ContentTemplate="{DataTemplate local:AboutPage}" />
    <ShellContent Title="Simple Exercises"
                  ContentTemplate="{DataTemplate local:SimpleExercisesPage}" />
    <MenuItem Text="Light Theme" Clicked="OnLight"/>
    <MenuItem Text="Dark Theme" Clicked="OnDark"/>
    <MenuItem Text="Red Theme" Clicked="OnRed"/>
    <MenuItem Text="Pink Theme" Clicked="OnPink" />


</Shell>
